@using Model.Entity
<style>
    .table tbody tr td {
        vertical-align: middle;
    }
</style>

<div class="panel">


    <table class="table table-striped">
        <tr>
            <td>编号</td>
            <td>用户名</td>
            <td>商品名</td>
            <td>图片</td>
            <td>评价</td>
            <td>评论内容</td>
            <td>操作</td>
        </tr>
        @foreach (T_Comment comment in ViewBag.list)
        {
            <tr>
                <td class="td-text">@comment.id</td>
                <td class="td-text">@comment.userEntity.name</td>
                <td class="td-text">@comment.goodsEntity.name</td>
                <td class="td-text">@comment.picture</td>
                <td class="td-text">@comment.grade</td>
                <td class="td-text">@comment.content</td>
                <td>
                    <button class="btn btn-default btn-sm" onclick="edit(@comment.id)">查看</button>
                    <button class="btn btn-danger btn-sm">删除</button>
                </td>
            </tr>
        }
    </table>

    <!--引入分页Layout-->
    <partial name="~/Views/Shared/Paging.cshtml" />
</div>



<script>
    function edit(id) {
        location.href = "../store/edit?goodsId=" + id;
    }

    function del(id) {
        $.ajax({
            url: 'delGoods',
            data: {
                goodsId: id
            },
            method: 'post',
            success: function (json) {
                alert(json);
                setTimeout(window.location.reload(), 2000);
            }
        });
    }


</script>